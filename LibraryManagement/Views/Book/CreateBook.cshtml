@model Book;

<div style = "display: flex; justify-content: center; align-items: center; height: calc(100vh - 60px - 57px);">
	<form asp-action="CreateBook" style="display: grid; border-radius: 10px; border: 3px solid #00669b; padding: 30px;">
		<h1>Add new Book</h1>

		<label asp-for="Title" style="margin-top: 20px">Title: </label>
		<input asp-for="Title" />

		<label asp-for="Author" style="margin-top: 20px">Author: </label>
		<input asp-for="Author" />

		<label asp-for="Genre" style="margin-top: 20px">Genre: </label>
		<input asp-for="Genre" />

		<label asp-for="Published" style="margin-top: 20px">Published: </label>
		<input asp-for="Published" />

		<label asp-for="Picture" style="margin-top: 20px">Cover Picture: </label>
		<select asp-for="Picture">
			<option value="">None</option>

			<option value="~/img/AirbornBook">Air Born</option>
			<option value="~/img/HarryPotterBook.jpg">Harry Potter Cover Book</option>
			<option value="~/img/HungerGameBook.webp">Hunger Game Cover Book</option>
			<option value="~/img/PercyJacksonBook.jpg">Percy Jackson Cover Book</option>
			<option value="~/img/TwilightBook.jpg">Twilight Cover Book</option>
			<option value="~/img/WonderBook.jpg">Wonder Cover Book</option>
		</select>

		<div class="flex-grow-1 justify-content-end" style="margin-top: 20px">
			<button type="submit" style="background-color: #00669b; color:#fff; width: 80px; border: none; border-radius: 10px;">Post</button>
		</div>
	</form>
</div>
