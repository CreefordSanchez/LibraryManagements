@model CheckOut
@{
    ViewData["Title"] = "Checkout";
}
<div class="container mt-5">
    <div class="card shadow border-0 bg-white">
        <div class="card-body">
            <h3 class="mb-4 text-primary-custom">Edit @ViewData["Title"]</h3>
            <form asp-action="Edit">
                <input asp-for="UserId" type="hidden" />
                <input asp-for="BookId" type="hidden" />

                <div class="mb-3">
                    <label asp-for="CheckoutDate" class="form-label text-primary-custom"></label>
                    <input asp-for="CheckoutDate" class="form-control" />
                    <span asp-validation-for="CheckoutDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label text-primary-custom"></label>
                    <input asp-for="DueDate" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="form-check mb-2">
                    <input asp-for="IsReturned" class="form-check-input" />
                    <label asp-for="IsReturned" class="form-check-label text-primary-custom"></label>
                </div>

                <div class="form-check mb-2">
                    <input asp-for="IsOverdue" class="form-check-input" />
                    <label asp-for="IsOverdue" class="form-check-label text-primary-custom"></label>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="AuthorizeCheckout" class="form-check-input" />
                    <label asp-for="AuthorizeCheckout" class="form-check-label text-primary-custom"></label>
                </div>

                <button type="submit" class="btn btn-primary-custom">Update</button>
                <a asp-action="Index" class="btn btn-outline-custom ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    .text-primary-custom {
        color: #00669b;
    }

    .btn-primary-custom {
        background-color: #00669b;
        color: white;
        border: none;
    }

    .btn-outline-custom {
        border: 1px solid #00669b;
        color: #00669b;
        background-color: white;
    }

    .btn-outline-custom:hover {
        background-color: #00669b;
        color: white;
    }

    .card {
        border-radius: 12px;
    }
</style>
