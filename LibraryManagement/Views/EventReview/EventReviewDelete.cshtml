@model EventReview

@{
    ViewData["Title"] = "Delete Review";
}

<h2>Delete Review</h2>

<h4>Are you sure you want to delete this review?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Title
        </dd>

        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>

        <dt class="col-sm-2">
            Reviewed By
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="EventReviewId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
