@model EventReview

<h2>Edit Event Review</h2>

<form asp-action="Edit">
    <input asp-for="EventReviewId" type="hidden" />
    <input asp-for="UserId" type="hidden" />

    <div class="form-group">
        <label asp-for="EventId">Event</label>
        <select asp-for="EventId" class="form-control">
            <option value="">-- Select Event --</option>
            @foreach (Event ev in ViewBag.EventList)
            {
                <option value="@ev.EventId">@ev.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating"/>
    </div>

    <div class="form-group">
        <label asp-for="Comment">Comment</label>
        <input asp-for="Comment" />
    </div>

    <button type="submit" class="btn">Update</button>
</form>
