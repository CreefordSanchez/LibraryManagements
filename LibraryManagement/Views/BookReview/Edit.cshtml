@model BookReview

<h2>Edit Book Review</h2>

<form asp-action="Edit">
    <input asp-for="BookReviewId" type="hidden" />
    <input asp-for="UserId" type="hidden" />

    <div class="form-group">
        <label asp-for="BookId">Book</label>
        <select asp-for="BookId">
            <option value="">-- Select Book --</option>
            @foreach (Book book in ViewBag.BookList)
            {
                <option value="@book.BookId">@book.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating" />
    </div>

    <div class="form-group">
        <label asp-for="Comment">Comment</label>
        <input asp-for="Comment" />
    </div>

    <button type="submit" class="btn">Update</button>
</form>
