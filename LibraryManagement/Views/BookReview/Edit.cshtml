@model BookReview
@{
    ViewData["Title"] = "Book Review";
}
<div class="container mt-5">
    <div class="card shadow border-0 bg-white">
        <div class="card-body">
            <h3 class="mb-4 text-primary-custom">Edit @ViewData["Title"]</h3>
            <form asp-action="Edit">
                <input asp-for="BookReviewId" type="hidden" />
                <input asp-for="UserId" type="hidden" />

                <div class="mb-3">
                    <label asp-for="BookId" class="form-label text-primary-custom"></label>
                    <select asp-for="BookId" class="form-control">
                        @foreach (Book book in ViewBag.BookList)
                        {
                            <option value="@book.BookId">@book.Title</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label text-primary-custom"></label>
                    <input asp-for="Rating" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label text-primary-custom"></label>
                    <input asp-for="Comment" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary-custom">Update</button>
                <a asp-action="Index" class="btn btn-outline-custom ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    .text-primary-custom {
        color: #00669b;
    }

    .btn-primary-custom {
        background-color: #00669b;
        color: white;
        border: none;
    }

    .btn-outline-custom {
        border: 1px solid #00669b;
        color: #00669b;
        background-color: white;
    }

    .btn-outline-custom:hover {
        background-color: #00669b;
        color: white;
    }

    .card {
        border-radius: 12px;
    }
</style>
